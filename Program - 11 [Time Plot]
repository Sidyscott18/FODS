import matplotlib.pyplot as plt

days = list(range(1, 31))
sales = [100 + (i * 5) for i in days]

plt.figure(figsize=(8, 5))
plt.plot(days, sales, color='blue')
plt.title('Daily Sales in a Month - Line Plot')
plt.xlabel('Day')
plt.ylabel('Sales')
plt.tight_layout()
plt.show()

plt.figure(figsize=(8, 5))
plt.scatter(days, sales, color='red')
plt.title('Daily Sales in a Month - Scatter Plot')
plt.xlabel('Day')
plt.ylabel('Sales')
plt.tight_layout()
plt.show()

plt.figure(figsize=(8, 5))
plt.bar(days, sales, color='green')
plt.title('Daily Sales in a Month - Bar Plot')
plt.xlabel('Day')
plt.ylabel('Sales')
plt.tight_layout()
plt.show()
